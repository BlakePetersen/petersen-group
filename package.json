{
  "name": "petersen-group",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --parallel",
    "dev:0xbp": "turbo run dev --scope=0xbp.io",
    "dev:app": "turbo run dev --scope=ashleypetersenphoto.com",
    "dev:bpio": "turbo run dev --scope=blakepetersen.io",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "turbo run start --parallel",
    "start:0xbp": "turbo run start --scope=0xbp.io",
    "start:app": "turbo run start --scope=ashleypetersenphoto.com",
    "start:bpio": "turbo run start --scope=blakepetersen.io",
    "studio:0xbp": "turbo run sanity start --scope=studio.0xbp.io",
    "studio:app": "turbo run sanity start --scope=studio.ashleypetersenphoto.com",
    "studio:bpio": "turbo run sanity start --scope=studio.blakepetersen.io",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "turbo": "^1.0.28"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "clean": {},
      "dev": {
        "cache": false
      },
      "lint": {},
      "start": {
        "dependsOn": [
          "^build"
        ]
      },
      "sanity": {},
      "test": {}
    }
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "yarn eslint --quiet --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
